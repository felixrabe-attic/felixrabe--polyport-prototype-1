@import 'nib'

body
    background-color #F7F7F8
    margin 0
    padding 0
    font 16px "Lucida Grande", Helvetica, Arial, sans-serif

.clearfix
    clearfix()

.header_jacket
    border-top solid 12px #67AF29

.header
    margin 0 auto
    width 959px
    position relative

    & img.logo
        float left
        padding 8px 0 9px 10px

    & ul.session
        absolute bottom right
        margin 0
        padding 8px

        & li
            border-left solid 1px
            &:first-child
                border-left none
            display inline
            margin 0
            padding-left 7px
            padding-right 6px

.content_jacket
    background url(/images/slider_bg.jpg) center top repeat-x
    padding 48px + 10px 10px

.content
    background-color #F7F7F8
    border-radius 10px
    margin 0 auto
    padding 10px
    width 939px

h1, h2, h3, h4
    reset-box-model()
    margin-bottom 10px
    font-size 24px

a
    color #00B7FF

p.info
    color #009900
    font-weight bold

label
    margin-right 10px

    & > *:first-child
        margin-left 5px

footer-color = #4C4545

.footer
    padding 11px 0 9px 0

    & ul
        color footer-color
        & a
            color footer-color
        margin 0 auto
        text-align center
        width 900px

        & li
            border-left solid 1px footer-color
            &:first-child
                border-left none
            display inline
            margin 0
            padding-left 7px
            padding-right 6px
