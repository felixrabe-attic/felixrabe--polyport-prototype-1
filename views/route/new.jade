h2 New route
form(method='post', action='/route/new')
    select(name='from')
        option Basel
        option Bern
        option Genf
        option Lausanne
        option(selected) Zürich
    select(name='to')
        option(selected) Basel
        option Bern
        option Genf
        option Lausanne
        option Zürich
    input(name='notes', placeholder='Notes')
    input(type='submit', value='Enter')
